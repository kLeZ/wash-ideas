{
	"compilerOptions": {
		"noImplicitAny": true,
		"target": "es6",
		"sourceMap": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": [
			"node",
			"filesystem",
			"react",
			"jest",
			"browserfs",
			"reflect-metadata"
		],
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@webassemblyjs"
		],
		"lib": ["dom", "es6"],
	}
}
