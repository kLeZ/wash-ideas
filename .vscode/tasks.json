{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"identifier": "build"
		},
		{
			"type": "npm",
			"script": "test",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"identifier": "test"
		},
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				"$tsc"
			],
			"identifier": "watch"
		},
		{
			"type": "npm",
			"script": "start",
			"identifier": "serve",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},
			"promptOnClose": true,
			"problemMatcher": []
		}
	]
}